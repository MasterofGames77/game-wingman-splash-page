{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "outDir": "./dist", // Ensures transpiled files go to the dist directory
        "rootDir": "./", // Your project root, ensuring TypeScript treats everything correctly
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node" // Includes Node.js types
        ]
    },
    "include": [
        "./**/*.ts", // Include all TypeScript files within the server directory
        "types/types.d.ts" // Ensure your custom types are included if needed
    ],
    "exclude": [
        "node_modules" // Exclude node_modules to avoid unnecessary compilation
    ]
}