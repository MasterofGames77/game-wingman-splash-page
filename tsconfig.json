{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // This is fine for React using ES Modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // No need to emit files, since React handles this through Webpack/Babel
    "jsx": "react-jsx" // Modern JSX transform for React
  },
  "include": [
    "src" // Ensures TypeScript only includes files in the src folder (your React app)
  ]
}