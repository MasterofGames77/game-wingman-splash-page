{
  "version": 2,
  "builds": [
    {
      "src": "server/server.ts",
      "use": "@vercel/node",
      "config": {
        "tsconfig": "server/tsconfig.json"
      }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.html"
    }
  ]
}
